{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["hooks/*"],
      "@zustand/*": ["zustand/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "custom.d.ts",
    "src/utils/downloadSheet.mjs"
  ],
  "exclude": ["node_modules"]
}
